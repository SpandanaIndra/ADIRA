<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ADIRA
            <img src="icon-192.webp" alt="Home" width="50" height="50" />
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
                <AuthorizeView Roles="Administrator,User">
                    <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
            </Authorized>
                </AuthorizeView>
        
        
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="manageEmployees">
                        <span class="oi oi-person" aria-hidden="true"></span> Manage Employees
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator,User">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="gallery">
                        <span class="oi oi-camera-slr" aria-hidden="true"></span> Gallery
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3 dropdown" @onmouseover="ShowDropdown" @onmouseout="HideDropdown">
                    <NavLink class="nav-link ">
                        <span class="oi oi-person" aria-hidden="true"></span> Secret Santa
                        @*<span class="caret"></span>*@
                    </NavLink>
                    <div class="dropdown-content" style="display: @(@isDropdownVisible ? "block" : "none");">
                        <ul class="nav-list" style="list-style-type:disc">
                            <li><NavLink style="color:white" class="nav-link" href="secretsanta">Allocate Santa Page</NavLink></li>
                            <li><NavLink class="nav-link" href="revealSecretSanta">Reveal Secret Santa</NavLink></li>

                        </ul>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
       
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool isDropdownVisible = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ShowDropdown()
    {
        isDropdownVisible = true;
    }

    private void HideDropdown()
    {
        isDropdownVisible = false;
    }

}

